<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".meal_input">
    <EditText
        android:id="@+id/meal_name"
        android:layout_width="264dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="72dp"
        android:layout_marginTop="64dp"
        android:gravity="center_horizontal|top"
        android:lineSpacingExtra="0sp"
        android:hint="Meal 1"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@android:color/transparent"
        android:inputType="text"
        android:padding="8dp"
    />

    <TextView
        android:id="@+id/calorie_count"
        android:layout_width="29dp"
        android:layout_height="20dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="185dp"
        android:gravity="center_horizontal|top"
        android:lineSpacingExtra="1sp"
        android:text="428"
        android:textSize="16sp"
        android:translationY="-0.32sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/calories_tv"
        android:layout_width="75dp"
        android:layout_height="25dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="216dp"
        android:gravity="center_horizontal|top"
        android:lineSpacingExtra="0sp"
        android:text="Calories"
        android:textAppearance="@style/calories"
        android:textSize="18sp"
        android:translationY="-0.03sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/protein_count"
        android:layout_width="29dp"
        android:layout_height="20dp"
        android:layout_marginStart="140dp"
        android:layout_marginTop="185dp"
        android:gravity="center_horizontal|top"
        android:lineSpacingExtra="1sp"
        android:text="20g"
        android:textSize="16sp"
        android:translationY="-0.32sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/protein_tv"
        android:layout_width="75dp"
        android:layout_height="25dp"
        android:layout_marginStart="116dp"
        android:layout_marginTop="216dp"
        android:gravity="center_horizontal|top"
        android:lineSpacingExtra="0sp"
        android:text="Protein"
        android:textAppearance="@style/calories"
        android:textSize="18sp"
        android:translationY="-0.03sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/fats_tv"
        android:layout_width="75dp"
        android:layout_height="25dp"
        android:layout_marginStart="220dp"
        android:layout_marginTop="216dp"
        android:gravity="center_horizontal|top"
        android:lineSpacingExtra="0sp"
        android:text="Fats"
        android:textAppearance="@style/calories"
        android:textSize="18sp"
        android:translationY="-0.03sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/carbs_tv"
        android:layout_width="75dp"
        android:layout_height="25dp"
        android:layout_marginStart="320dp"
        android:layout_marginTop="216dp"
        android:gravity="center_horizontal|top"
        android:lineSpacingExtra="0sp"
        android:text="Carbs"
        android:textAppearance="@style/calories"
        android:textSize="18sp"
        android:translationY="-0.03sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/calorie_count3"
        android:layout_width="29dp"
        android:layout_height="20dp"
        android:layout_marginStart="243dp"
        android:layout_marginTop="185dp"
        android:gravity="center_horizontal|top"
        android:lineSpacingExtra="1sp"
        android:text="15g"
        android:textSize="16sp"
        android:translationY="-0.32sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/calorie_count4"
        android:layout_width="29dp"
        android:layout_height="20dp"
        android:layout_marginStart="344dp"
        android:layout_marginTop="185dp"
        android:layout_marginEnd="40dp"
        android:gravity="center_horizontal|top"
        android:lineSpacingExtra="1sp"
        android:text="15g"
        android:textSize="16sp"
        android:translationY="-0.32sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/food_recycler_view"
        android:layout_width="409dp"
        android:layout_height="488dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="245dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>